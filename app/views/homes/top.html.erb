<div class="container">
  <div class="header">
    <%= link_to "マチカフェ", root_path, class: "brand-logo" %>
  </div>
  <div class="content">
    <div class="left-column">
      <h2>架空のお店一覧</h2>
      <ul>
        <% @cafes.each do |cafe| %>
          <li>
            <strong><%= cafe.name %></strong><br>
            <%= cafe.description %><br>
            <%= cafe.address %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="right-column">
      <h2>ランキング一覧</h2>
      <!-- ランキングリストをここに追加 -->
    </div>
  </div>
</div>

