<h1>カフェ編集</h1>

<%= form_with model: @cafe, url: admin_cafe_path(@cafe), method: :patch, local: true do |form| %>
  <div>
    <%= form.label :cafe_name %>
    <%= form.text_field :cafe_name %>
  </div>
  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :category_id %>
    <%= form.number_field :category_id %>
  </div>
  <div>
    <%= form.label :image, "カフェの写真" %>
    <%= form.file_field :image %>
  </div>
  <div>
    <%= form.submit '更新' %> <!-- 更新ボタン -->
  </div>
<% end %>
